    = simple_form_for expression, :html => {:class => 'form-horizontal' } do |f|

      .row

        .span6
          = f.input :body,              :as => :string
          = f.input :meaning,           :as => :string
          -# f.input :source_type,      :as => :radio_buttons, :collection => Expression::SOURCE_TYPES
          = f.input :created_by_author, :as => :radio_buttons
