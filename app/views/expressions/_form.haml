.gridSystem
  .row
    = simple_form_for expression, :html => {:class => 'form-horizontal' } do |f|

      .row

        .span6
          = f.input :body,        :input_html => { :rows => 4 }, :placeholder => t(:expression_body)
          = f.input :meaning,     :input_html => { :rows => 4 }, :placeholder => t(:expression_meaning)
          = f.input :source_type, :collection => Expression::SOURCE_TYPES, :as => :radio_buttons, :label => :source
          = f.input :source_info, :input_html => { :rows => 4 }, :placeholder => t(:source_info, :default=>'')

          - if action_name == 'new'
            .control-group
              %label.control-label= t(:choose_expression_language)
              .custom-controls= render 'languages/list', :custom_class => 'nav-pills'


        .span6
          = todo do
            %h3 Please read these instructions before clicking submit
            %p An idiomatic expression, or idiom is...
            %p
              - 5.times do
                Lorem Ipsum dolor sit amet
            %h4 Some examples
            %p
              - 5.times do
                Lorem Ipsum dolor sit amet
      .row
        .form-actions= f.button :submit

